@model E_Commerce_Site.Models.Product
@{
    ViewBag.Title = "Index";
}


@Styles.Render("~/content/selectize")
@Scripts.Render("~/bundles/selectize")




@using (Html.BeginForm("AddImage", "Products", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {<div  style="width:100%" class="dropdown col-md-12 demo-default">
        @Html.DropDownList("ColorId", (IEnumerable<SelectListItem>)ViewBag.ColorId, htmlAttributes: new { @class = "dropdown ", Name = "ColorListSelect" })
    </div>
    <select id="ImagePositionsListSelect" name="ImagePositionsListSelect" style="width:100%" class="dropdown col-md-12 demo-default">

        <option value="Front Side">Front Side</option>
        <option value="Back Side">Back Side</option>
        <option value="Left Side">Left Side</option>
        <option value="Right Side">Right Side</option>
        <option value="Thumbnail">Thumbnail</option>
        <option value="Extra">Extra</option>
        <option value="Unassigned">Unassigned</option>

    </select>



    <div class=" form-group  editor-field col-md-12 row-">
        <input id="ImagePath" title="Upload a product image"
               type="file" name="ImageFile" class="btn-primary" required />
    </div>



    <div class="form-group  col-md-6">
        <input type="submit" value="Submit" class="btn btn-success" />
    </div>
    <div class="form-group  col-md-6">
        @Html.ActionLink("Back", "Create",null, htmlAttributes: new { @class = "btn btn-warning" })
    </div>

}

<script>
    $('#ImagePositionsListSelect').selectize({
        allowEmptyOption: false,
        maxItems: 1
    });
    $('#ColorId').selectize({
        allowEmptyOption: false,
        maxItems: 1

    });



</script>

