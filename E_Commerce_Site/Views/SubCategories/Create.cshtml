@model E_Commerce_Site.Models.SubCategory

@{
    ViewBag.Title = "Create";
}

@Styles.Render("~/content/selectize")
@Scripts.Render("~/bundles/selectize")




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
    
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12">
                @Html.LabelFor(model => model.SubCategoryName,"Sub-Category Name", htmlAttributes: new { @class = "control-label" })
            </div><div class="col-md-12">
                @Html.EditorFor(model => model.SubCategoryName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SubCategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.LabelFor(model => model.CategoryId, "Category Name", htmlAttributes: new { @class = "control-label " })
            </div><div class="col-md-12">
                @Html.DropDownList("CategoryId", null,"Select a Category", htmlAttributes: new { @class = "demo-default",id= "CategoryId" })
                @Html.ValidationMessageFor(model => model.CategoryId, "Category Name is required", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-6">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
        </div>
 
}

<div class="form-group col-md-6">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning" })
</div>
<script>
    $('#CategoryId').selectize({
        maxItems: 1,
        allowEmptyOption: false,

    });


</script>